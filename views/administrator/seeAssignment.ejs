<!DOCTYPE html>
<html>
    <head>
        <%-include('../templates/header.ejs')%>
    </head>
    <body style="background-color: rgba(76, 199, 230, 0.6);">

        <nav class="navbar navbar-light" style="background-color: white;">
            <%-include('../templates/navMainOnLogin.ejs')%>
        </nav><br>
        
        <main><br>
            <div class="container" style="background-color: white;">
                <nav class="navbar navbar-light" style="background-color: rgba(217, 217, 217, 0.7);">
                    <%-include('../templates/navAdm.ejs', { currentPage: currentPage })%>
                </nav><br>
                <h3 style="text-align: center;">Ver Asignación de Consultorios</h3>
                <div class="row">
                    <div class="table-responsive">
                        <div class="row" style="text-align: right;">

                            <div class="col-12" style="text-align: right;">
                                <label>Filtrar Datos</label>&nbsp;
                                <input type="text" id="filtro" placeholder="Buscar..." onkeyup="filtrarTabla()" style="border-radius: 5px;">
                            </div>
                        </div><br>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>N° Consultorio</th>
                                    <th>Piso</th>
                                    <th>N° Documento Médico</th>
                                    <th>Nombre Médico</th>
                                    <th>Especialidad</th>
                                    <th>Fecha</th>
                                    <th>Hora</th>
                                </tr>
                            </thead>
                            <tbody id="tableBody">
                                <% for(const assignments of data){ %>
                                    <%if(assignments.asignacion.length !=0){%>
                                    <tr>
                                        <td><%=assignments.numero_consultorio%></td>
                                        <td><%=assignments.piso%></td>
                                        <% for(const v of assignments.asignacion){ %>
                                            <td><%=v.documento_medico%></td>
                                            <% for(const n of dataMedico){ %>
                                                <%if(n.documento_identidad==v.documento_medico){%>
                                                    <td><%=n.nombre%></td>
                                                    <td><%=n.especialidad%></td>
                                                    <%break%>
                                                <%}%>
                                            <%}%>
                                            <td><%=v.fecha%></td>
                                            <td><%=v.horario%></td>
                                        <%}%>
                                        
                                    </tr>
                                    <%}%>
                                <%}%>
                            </tbody>
                        </table>
                    </div>
                </div><br>
            </div>
            <script>
                function filtrarTabla() {
                  const filtro = document.getElementById('filtro').value||"";
                  
                  // Realiza una solicitud AJAX para actualizar la tabla en tiempo real
                  fetch(`/assigment?filtro=${filtro}`)
                    .then(response => response.text())
                    .then(html => {
                      document.getElementById('tableBody').innerHTML = html;
                      const filtro2 = document.getElementById('filtro');
                    })
                    .catch(error => {
                      console.error('Error al filtrar la tabla:', error);
                    });
                }

              </script>
        </main>
        <footer class="footer" style="position: relative; bottom:0; left: 0; width: 100%; height: 50px; background-color: #16254C;">
            <%-include('../templates/footer.ejs')%>
        </footer>
    </body>
</html>